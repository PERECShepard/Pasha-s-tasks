#include <iostream>
#include <ctime>
#include <cstdlib>

class NumberGame{
    int human = 1000;
    int computer = 1000;
public:
    void balance(){
        std::cout << "Human:_" << human << std::endl;
        std::cout << "Computer:_" << computer;
    }
    void game(){
        int humanChoice, computerChoice, randNumber;
        std::cout << "Please enter the number between 1 - 10 range:";
        std::cin >> humanChoice;
        if (humanChoice < 1 || humanChoice > 10) {
            std::cout << "Invalid input select a number from 1 to 10.";
        }
        computerChoice = 3;
        randNumber = 5;
        while(computerChoice == humanChoice){
            computerChoice = rand() % 10 + 1;
        }
        if(std::abs(computerChoice - randNumber) < std::abs(humanChoice - randNumber)){
            std::cout << "Comp number: " << computerChoice << "Your number: " << humanChoice
                      << "Rand number: " << randNumber;
            std::cout << "computer win because he was closer";
            human -= 100;
            computer += 100;
        }else if(std::abs(computerChoice - randNumber) > std::abs(humanChoice - randNumber)){
            std::cout << "Comp number: " << computerChoice << "Your number: " << humanChoice
                      << "Rand number: " << randNumber;
            std::cout << "U R win because u were closer";
            human += 100;
            computer -= 100;
        }else if(computerChoice < humanChoice){
            std::cout << "Comp number: " << computerChoice << "Your number: " << humanChoice
                      << "Rand number: " << randNumber << std::endl;
            std::cout << "computer win because his number was less";
            human -= 100;
            computer += 100;
        }else {
            std::cout << "Comp number: " << computerChoice << "Your number: " << humanChoice
                      << "Rand number: " << randNumber << std::endl;
            std::cout << "U R win because your number was less";
            human += 100;
            computer -= 100;
        }
    }
};

int main() {
    srand(time(nullptr));
    NumberGame number;
    number.game();
    number.balance();
}
